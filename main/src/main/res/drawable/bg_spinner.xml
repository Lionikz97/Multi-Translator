<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <layer-list>
            <item>
                <shape android:shape="rectangle">
                    <solid android:color="@color/background"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <item android:drawable="@drawable/ic_triangle"
                  android:gravity="right|bottom">
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="3dp" android:color="@color/background"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
            <item>
                <shape android:shape="rectangle">
                    <stroke android:width="2dp" android:color="@color/foregroundSecond"/>
                    <corners android:radius="2dp"/>
                </shape>
            </item>
        </layer-list>
    </item>

</selector>